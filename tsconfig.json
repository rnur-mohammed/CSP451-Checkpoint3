{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node"],

    /* File Locations */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interop & Module Resolution */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,

    /* Source Maps for debugging */
    "sourceMap": true,

    /* Declarations (optional, not required for this project but good practice) */
    "declaration": true,
    "declarationMap": true
  },

  /* Exclude tests and build outputs */
  "exclude": ["node_modules", "dist", "__tests__"]
}
