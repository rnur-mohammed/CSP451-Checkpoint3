{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node", "jest"],

    /* File Locations */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interop & Module Resolution */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,

    /* Source Maps */
    "sourceMap": true,

    /* Declarations */
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "dist", "__tests__"]
}
